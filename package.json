{
  "name": "vscode-pull-request-bitbucket",
  "displayName": "Bitbucket Pull Requests",
  "description": "Pull Request Provider for Bitbucket",
  "icon": "resources/icons/bitbucket_logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/atlassian/vscode-pull-request-bitbucket"
  },
  "bugs": {
    "url": "https://github.com/atlassian/vscode-pull-request-bitbucket/issues"
  },
  "enableProposedApi": true,
  "preview": true,
  "version": "0.1.4",
  "publisher": "Bitbucket",
  "engines": {
    "vscode": "^1.27.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./media/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bitbucket Pull Requests",
      "properties": {
        "telemetry.optout": {
          "type": "boolean",
          "description": "Disable usage data and errors to be sent to a Bitbucket online service"
        },
        "github.hosts": {
          "type": "array",
          "default": [],
          "description": "List of host credentials. For example, \"bitbucket.hosts\": [ { \"host\": \"https://bitbucket.org\", \"token\": \"BITBUCKET TOKEN\" } ]",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "description": "The host name of the Bitbucket server (for eg., 'https://bitbucket.org')"
              },
              "username": {
                "type": "string",
                "description": "The username to access Bitbucket (optional)"
              },
              "token": {
                "type": "string",
                "description": "Bitbucket access token with the following scopes: read:user, user:email, repo, write:discussion"
              }
            }
          }
        }
      }
    },
    "views": {
      "scm": [
        {
          "id": "pr",
          "name": "Bitbucket Pull Requests",
          "when": "config.git.enabled && bitbucket:hasBitbucketRemotes && workspaceFolderCount != 0"
        },
        {
          "id": "prStatus",
          "name": "Changes In Pull Request",
          "when": "config.git.enabled && bitbucket:hasBitbucketRemotes && bitbucket:inReviewMode"
        }
      ]
    },
    "commands": [
      {
        "command": "pr.pick",
        "title": "Checkout Pull Request",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.close",
        "title": "Close Pull Request",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.openPullRequestInBitbucket",
        "title": "Open Pull Request in Bitbucket",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.refreshPullRequest",
        "title": "Refresh Pull Request",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.openFileInBitbucket",
        "title": "Open File in Bitbucket",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.openDiffView",
        "title": "Open Diff View",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.openDescription",
        "title": "View Pull Request Description",
        "category": "Bitbucket Pull Requests",
        "when": "bitbucket:inReviewMode"
      },
      {
        "command": "review.openFile",
        "title": "Open File",
        "icon": {
          "light": "resources/icons/light/open-file.svg",
          "dark": "resources/icons/dark/open-file.svg"
        }
      },
      {
        "command": "pr.refreshList",
        "title": "Refresh Pull Requests List",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        },
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.refreshChanges",
        "title": "Refresh",
        "icon": {
          "dark": "resources/icons/dark/refresh.svg",
          "light": "resources/icons/light/refresh.svg"
        },
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.deleteLocalBranch",
        "title": "Delete Local Branch",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.signin",
        "title": "Sign in to Bitbucket",
        "category": "Bitbucket Pull Requests"
      },
      {
        "command": "pr.signinAndRefreshList",
        "title": "Sign in and Refresh",
        "category": "Bitbucket Pull Requests"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "pr.pick",
          "when": "false"
        },
        {
          "command": "review.openFile",
          "when": "false"
        },
        {
          "command": "pr.close",
          "when": "config.git.enabled && bitbucket:inReviewMode"
        },
        {
          "command": "pr.openPullRequestInBitbucket",
          "when": "config.git.enabled && bitbucket:inReviewMode"
        },
        {
          "command": "pr.openFileInBitbucket",
          "when": "false"
        },
        {
          "command": "pr.refreshPullRequest",
          "when": "false"
        },
        {
          "command": "pr.deleteLocalBranch",
          "when": "false"
        },
        {
          "command": "pr.openDiffView",
          "when": "false"
        },
        {
          "command": "pr.openDescription",
          "when": "config.git.enabled && bitbucket:inReviewMode"
        },
        {
          "command": "pr.refreshList",
          "when": "config.git.enabled && bitbucket:hasBitbucketRemotes"
        },
        {
          "command": "pr.refreshChanges",
          "when": "false"
        },
        {
          "command": "pr.signin",
          "when": "config.git.enabled && bitbucket:hasBitbucketRemotes"
        },
        {
          "command": "pr.signinAndRefreshList",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "pr.refreshList",
          "when": "view == pr",
          "group": "navigation"
        },
        {
          "command": "pr.refreshChanges",
          "when": "view == prStatus",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pr.pick",
          "when": "view == pr && viewItem =~ /pullrequest(:local)?:nonactive|description/",
          "group": "pullrequest@1"
        },
        {
          "command": "pr.refreshPullRequest",
          "when": "view == pr && viewItem =~ /pullrequest|description/",
          "group": "pullrequest@2"
        },
        {
          "command": "pr.openPullRequestInBitbucket",
          "when": "view == pr && viewItem =~ /pullrequest|description/",
          "group": "pullrequest@3"
        },
        {
          "command": "pr.deleteLocalBranch",
          "when": "view == pr && viewItem =~ /pullrequest:local:nonactive/",
          "group": "pullrequest@4"
        },
        {
          "command": "pr.openFileInBitbucket",
          "when": "view =~ /(pr|prStatus)/ && viewItem == filechange"
        }
      ],
      "editor/title": [
        {
          "command": "review.openFile",
          "group": "navigation",
          "when": "resourceScheme =~ /^review$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --env.production",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -p ./",
    "watch": "webpack --watch --env.development",
    "test": "tsc -p ./ && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/keytar": "^4.0.1",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.2.2",
    "@types/node": "*",
    "@types/webpack": "^4.4.10",
    "@types/ws": "^5.1.2",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "gulp": "3.9.1",
    "gulp-mocha": "^6.0.0",
    "gulp-typescript": "^5.0.0-alpha.2",
    "gulp-util": "^3.0.8",
    "mocha": "^5.2.0",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.0.1",
    "tslint": "^5.11.0",
    "tslint-webpack-plugin": "^1.2.2",
    "typescript": "^2.1.4",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "bitbucket": "^1.2.0",
    "randomstring": "^1.1.5",
    "serve-static": "^1.13.2",
    "@octokit/rest": "^15.9.5",
    "node-emoji": "^1.8.1",
    "git-credential-node": "^1.1.0",
    "iconv-lite": "0.4.23",
    "markdown-it": "^8.4.0",
    "markdown-it-checkbox": "^1.1.0",
    "moment": "^2.22.1",
    "telemetry-github": "https://github.com/shana/telemetry/releases/download/0.3.2/telemetry-github-v0.3.2.tgz",
    "tmp": "^0.0.31",
    "vscode": "^1.1.18",
    "ws": "^6.0.0"
  },
  "optionalDependencies": {
    "spawn-sync": "^2.0.0"
  }
}
